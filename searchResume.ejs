<!DOCTYPE html>
<html lang="en">
<head>
    <title>Search Resume</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h2>Search Resume</h2>
    <form action="/search-resume" method="POST">
        <input type="text" name="name" placeholder="Enter Name">
        <button type="submit">Search</button>
    </form>

    <h3>Search Results:</h3>
    <% if (resumes.length > 0) { %>
        <ul>
            <% resumes.forEach(resume => { %>
                <li>
                    <strong>Name:</strong> <%= resume.name %> <br>
                    <strong>Email:</strong> <%= resume.email %> <br>
                    <strong>Phone:</strong> <%= resume.phone %> <br>
                    <strong>Skills:</strong> <%= resume.skills %> <br>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No resumes found.</p>
    <% } %>
</body>
</html>
